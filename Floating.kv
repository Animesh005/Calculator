<CustomButton@Button>:
    font_size: 32
    color: 0, 0, 0, 1
    size: 150, 50
    background_normal: ''
    background_down: 'img.png'
    background_color: .88, .88, .88, 1
    size_hint: .40, .30

<FloatLayout>:
    CustomButton:
        text: "Top Left"
        pos_hint: {"x": 0, "top": 1}

    CustomButton:
        text: "Bottom Right"
        pos_hint: {"right": 1, "y": 0}

    CustomButton:
        text: "Top right"
        pos_hint: {"right": 1, "top": 1}

    CustomButton:
        text: "Bottom Left"
        pos_hint: {"left": 1, "bottom": 0}

    CustomButton:
        text: "Centre"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}



